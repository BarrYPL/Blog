<h1>>/Categories $</h1>
<div class="buttons">
  <a href="#" onclick="history.back()" class="main-button">cd ..</a>
</div>
<hr>
<% @categories.each do |category| %>
  <div class="category-post-group">
    <div class="category">
      <h2><a href="/categories/<%= category %>"><%= category.capitalize %></a></h2>
    </div>
    <div class="posts">
      <% @posts.select { |post| post[:category].split(',').include?(category) }.take(2).each do |post| %>
        <div class="post-elem">
          <div class="post">
            <div class="post-title">
              <a href="/post/<%= post[:id] %>"><h2><%= post[:title].titleize %></h2></a>
            </div>
            <div class="post-content">
              <p><%= post[:content] %></p>
            </div>
          </div>
          <div class="post-date">
            <p><%= post[:date].strftime("%-d %b") %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <hr>
<% end %>
