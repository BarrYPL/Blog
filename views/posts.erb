<h1>>/Posts $</h1>
<hr>
<% @years.each do |year| %>
  <div class="year-group">
    <h2><%= year %></h2>
    <div class="posts">
      <% @posts.select { |post| post[:date].year == year }.each do |post| %>
        <div class="post-elem">
          <a href="/post/<%= post[:id] %>">
            <div class="post">
              <h3><%= post[:title] %></h3>
              <p><%= post[:content] %></p>
            </div>
          </a>
          <div class="post-date">
            <p><%= post[:date].strftime("%-d %b") %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <hr>
<% end %>
