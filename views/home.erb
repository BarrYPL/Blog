<hr id="above-desktop">
<div class="desktop" id="desktop">
  <div class="menu-bar">
    <div class="app-icon" id="terminal-icon"><i class="fa-solid fa-terminal"></i></div>
  </div>
  <div class="terminal">
    <div class="terminal-header">
      <span class="red-dot" id="exit"></span>
      <span class="yellow-dot" id="minimize"></span>
      <span class="green-dot"></span>
    </div>
    <p id="welcome-paragraph"><span class="logo-coursor"></span></p>
  </div>
</div>
<div id="context-menu" class="context-menu">
  <ul>
    <li id="open-terminal">Show/Hide</li>
    <li id="maximize-terminal">Maximize</li>
    <li id="close-desktop">Close</li>
  </ul>
</div>
<hr>
<div class="recent-posts">
<h2>Recent posts</h2>
  <div class="posts-list">
    <% $postsDB.where(is_public: 1).order(Sequel.desc(:date)).limit(3).all.each do |post| %>
      <div class="post-card">
        <div class="anchor-holder">
          <a href="/post/<%= post[:id] %>">
            <% unless post[:thumbnail].nil? %>
            <img src="./images/thumbnails/<%= post[:thumbnail] %>" alt="" class="post-tumbnail">
            <% else %>
            <div class="post-thumbnail placeholder"><i class="fa-solid fa-panorama fa-5x"></i></div>
            <% end %>
          </a>
        </div>
          <div class="post">
            <div class="post-date">
              <p><%= post[:date].strftime("%-d.%m.%Y") %>r</p>
            </div>
            <div class="post-title">
              <a href="/post/<%= post[:id] %>"><h3><%= post[:title].titleize %></h3></a>
            </div>
            <div class="post-content">
              <p><%= post[:content].trimm_to_preview %></p>
            </div>
          </div>
      </div>
    <% end %>
  </div>
  <div class="see-more">
    <a href="/posts"><h3>See more...</h3></a>
  </div>
</div>
