<hr>
<p id="welcome-paragraph"></p>
<hr>
<div class="recent-posts">
<h2>Recent posts</h2>
  <div class="posts-list">
    <% $postsDB.where(is_public: 1).order(Sequel.desc(:date)).limit(3).all.each do |post| %>
      <div class="post-card">
        <a href="/post/<%= post[:id] %>"><img src="https://picsum.photos/220/120" alt=""></a>
          <div class="post">
            <div class="post-date">
              <p><%= post[:date].strftime("%-d.%m.%Y") %>r</p>
            </div>
            <div class="post-title">
              <a href="/post/<%= post[:id] %>"><h3><%= post[:title].titleize %></h3></a>
            </div>
            <div class="post-content">
              <p><%= post[:content].trimm_to_preview %></p>
            </div>
          </div>
      </div>
    <% end %>
  </div>
  <div class="see-more">
    <a href="/posts"><h3>See more...</h3></a>
  </div>
</div>
